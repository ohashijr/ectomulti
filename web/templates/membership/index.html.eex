<h2>Listing memberships</h2>

<table class="table">
  <thead>
    <tr>
      <th>Role</th>
      <th>User</th>
      <th>Account</th>

      <th></th>
    </tr>
  </thead>
  <tbody>
<%= for membership <- @memberships do %>
    <tr>
      <td><%= membership.role %></td>
      <td><%= membership.user_id %></td>
      <td><%= membership.account_id %></td>

      <td class="text-right">
        <%= link "Show", to: membership_path(@conn, :show, membership), class: "btn btn-default btn-xs" %>
        <%= link "Edit", to: membership_path(@conn, :edit, membership), class: "btn btn-default btn-xs" %>
        <%= link "Delete", to: membership_path(@conn, :delete, membership), method: :delete, data: [confirm: "Are you sure?"], class: "btn btn-danger btn-xs" %>
      </td>
    </tr>
<% end %>
  </tbody>
</table>

<%= link "New membership", to: membership_path(@conn, :new) %>
